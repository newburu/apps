<div class="bg-white">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
    <div class="lg:grid lg:grid-cols-2 lg:gap-8 items-start">
      <!-- OGP / Image Section -->
      <div class="relative">
         <div class="aspect-w-16 aspect-h-9 rounded-lg overflow-hidden bg-gray-100 shadow-lg mb-8 lg:mb-0">
            <% if @project.image_data.present? %>
              <img src="<%= @project.image_data %>" alt="<%= @project.title %>" class="w-full h-full object-center object-cover">
            <% else %>
              <div class="flex items-center justify-center h-full text-gray-400">No Image Preview</div>
            <% end %>
         </div>
      </div>

      <!-- Content Section -->
      <div class="mt-8 lg:mt-0">
        <div class="pl-4 -ml-4">
           <%= link_to "← ポートフォリオに戻る", user_portfolio_path(@user.slug), class: "text-sm text-gray-500 hover:text-gray-900 mb-4 inline-block" %>
        </div>
        
        <h1 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl"><%= @project.title %></h1>

        <div class="mt-6 text-gray-500 space-y-6">
          <%= simple_format @project.description %>
        </div>

        <div class="mt-8 border-t border-gray-200 pt-8">
          <div class="flex items-center">
             <h3 class="text-sm font-medium text-gray-900 mr-4">サイトURL:</h3>
             <%= link_to @project.url, @project.url, target: "_blank", rel: "noopener", class: "text-indigo-600 hover:text-indigo-500 break-all" %>
          </div>
        </div>

        <!-- Social Share / OGP meta tags would go into head via content_for -->
        <% content_for :head do %>
          <meta property="og:title" content="<%= @project.title %>" />
          <meta property="og:description" content="<%= @project.description.truncate(100) %>" />
          <meta property="og:image" content="<%= @project.image_data %>" />
          <meta name="twitter:card" content="summary_large_image" />
        <% end %>
      </div>
    </div>
  </div>
</div>
