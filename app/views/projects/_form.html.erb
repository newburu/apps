<%= form_with(model: [ :dashboard, project ], local: true) do |f| %>
  <% if project.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <h3 class="font-bold">入力内容に以下のエラーがあります:</h3>
      <ul class="list-disc list-inside">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6" data-controller="ogp-fetcher">
    <div>
      <%= f.label :title, "プロジェクト名", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_field :title, data: { "ogp-fetcher-target": "title" }, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_area :description, rows: 3, data: { "ogp-fetcher-target": "description" }, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
    </div>

    <div>
      <%= f.label :url, "URL", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_field :url, data: { "ogp-fetcher-target": "url", action: "change->ogp-fetcher#fetch" }, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md", placeholder: "https://example.com" %>
          <p class="mt-1 text-sm text-gray-500">URLを入力すると自動で情報を取得します。</p>
      </div>
    </div>

    <div>
      <%= f.label :image_data, "画像URL (一時的)", class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= f.text_field :image_data, data: { "ogp-fetcher-target": "image" }, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <p class="mt-2 text-sm text-gray-500">※ 本来はActiveStorage等でアップロードしますが、簡易実装のためURLを入力してください。</p>
    </div>

    <div>
      <div class="flex items-start">
        <div class="flex items-center h-5">
          <%= f.check_box :visible, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
        </div>
        <div class="ml-3 text-sm">
          <%= f.label :visible, "ポートフォリオに公開する", class: "font-medium text-gray-700" %>
          <p class="text-gray-500">チェックを外すと、自分だけが見れる状態になります。</p>
        </div>
      </div>
    </div>
    
    <div class="flex justify-end">
      <%= link_to "キャンセル", dashboard_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-3" %>
      <%= f.submit "保存する", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
<% end %>
